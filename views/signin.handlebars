          <div class="form-group">
            <label for="example-text">Tappy Hour Identification</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Enter Business Id">
          </div>
          <div class="form-group">
            <label for="example-description">Password</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter password"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-left">Sign In</button><a class="btn btn-primary float-right" href="/regist">Register</a>
        </form>
        </div>
    </div>
</div>